{
  "name": "wining-webapp",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Martijn Natte",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --inline --hot",
    "build": "npm run lint && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "eslint --ext vue,js --fix src"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "no-new": 1,
      "no-console": 1,
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "dependencies": {
    "axios": "^0.15.3",
    "bulma": "^0.2.3",
    "chart.js": "^2.4.0",
    "lodash": "^4.17.4",
    "stylus": "^0.54.5",
    "vue": "^2.1.0",
    "vue-bulma-datepicker": "^1.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "eslint-plugin-vue": "^2.0.1",
    "file-loader": "^0.9.0",
    "style-loader": "^0.17.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony",
    "vue-loader": "^10.0.0",
    "vue-template-compiler": "^2.1.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.9"
  }
}
